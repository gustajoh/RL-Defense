FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    iptables \
    snort \
    net-tools \
    iproute2 \
    iputils-ping \
    curl \
    shorewall \
    vim && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*


RUN echo "net.ipv4.ip_forward=1" >> /etc/sysctl.conf && \
    sysctl -p

EXPOSE 22 80 443

CMD ["sh"]
